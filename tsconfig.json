{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "lib": ["ES6", "DOM"]
  },
  "include": ["src/Ts/**/*.ts"],
  "exclude": ["node_modules"]
}
